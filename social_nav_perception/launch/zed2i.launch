<launch> 

    <arg name="node_name"          default="zed" />
    <arg name="camera_model"       default="zed2i" />    
    <arg name="camera_name"        default="zed" />

    <!-- Launch zed nodelet manager -->
    <node pkg="nodelet" type="nodelet" name="/$(arg node_name)_nodelet_manager" args="manager" output="screen">
        <param name="nodelet_manager_name" value="/$(arg node_name)_nodelet_manager" />
    </node>

    <!-- Load ZED wrapper nodelet for the camera -->
    <include file="$(find social_nav_perception)/launch/zed_camera_nodelet.launch">
        <arg name="camera_name"                 value="$(arg camera_name)" />
        <arg name="node_name"                   value="$(arg node_name)" />
        <arg name="camera_model"                value="$(arg camera_model)" />
    </include>
</launch>
